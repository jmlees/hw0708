<%= form_for(@post) do |f|%>
    <table class="i_style">
        <tr>
            <td>
                <%=f.label :user_name, "작성자"%>
                <%=f.text_field :user_name, value: "#{current_user.email}", class: "form-control"%><br>
            </td>
        </tr>
        <tr>
            <td>
                <%=f.label :title, "글 제목"%>
                <%=f.text_field :title, class: "form-control"%><br>
            </td>
        </tr>
        <tr>
            <td>
                <%=f.label :content, "글 내용"%>
                <%=f.text_area :content, class: "form-control"%><br>
            </td>
        </tr>
        <tr>
            <td>
                <center>
                    <%=f.submit "작성", class: "btn btn-default"%>
                    &nbsp;<%=link_to "돌아가기", posts_path, class: "btn btn-default"%>
                </cener>
            </td>
        </tr>
    </table>
<%end%>