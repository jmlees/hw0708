<h1>
    글 보기 페이지입니다
</h1>
<center>
    <table class="i_style table table-bordered">
        <tr>
            <th width = "5%"><%= @post.id %></th>
            <th><%= @post.title %></th>
            <th width = "10%"><%= @post.user_name %></th>
        </tr>
        <tr>
            <td colspan="3" height="200px"><%= @post.content %></td>
        </tr>
    </table>
    <p>
        <%= link_to "수정", edit_post_path(@post), class: "btn btn-default"%>&nbsp;
        <%= link_to "삭제", post_path(@post), method: "delete", class: "btn btn-default"%>&nbsp;
        <%= link_to "돌아가기", "/", method: "get", class: "btn btn-default"%>
    </p>
    <br>
    <div>
        <%= form_for([@post, @post.comments.new]) do |cc| %>
            <table>
                <tr>
                    <%= cc.text_field :content, class: "cc_style" %>&nbsp;
                    <%= cc.submit "작성", class: "btn btn-default" %>
                </tr>
            </table>
        <%end%>
    </div>
    <br>
    <div>
        <hr width="50%">
        <% @comments.each do |ccc|%>
            <p>
                <%= ccc.content%>
            </p>
            <hr width="50%">
        <%end%>
    </div>
</center>

<style>
    th{
        text-align: center;
    }

    .table{
        width: 70%;
    }
</style>